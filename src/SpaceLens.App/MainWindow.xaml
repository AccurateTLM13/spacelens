<Window x:Class="SpaceLens.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpaceLens" Height="760" Width="1280" MinWidth="1024" MinHeight="640">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" Background="#FFF5F5F5" CornerRadius="6">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" FontWeight="SemiBold" Text="Search (placeholder):" Margin="0,0,8,0"/>
                <TextBox DockPanel.Dock="Left" Width="280" Margin="0,0,24,0" IsEnabled="False" Text="Coming in future task"/>
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" FontWeight="SemiBold" Text="Filters (placeholder):" Margin="0,0,8,0"/>
                <ComboBox DockPanel.Dock="Left" Width="180" IsEnabled="False">
                    <ComboBoxItem>Size</ComboBoxItem>
                </ComboBox>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="6">
                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Scan Controls" Margin="0,0,0,8"/>

                    <TextBlock FontWeight="SemiBold" Text="Drive Picker"/>
                    <ComboBox SelectedValue="{Binding SelectedDrive}" SelectedValuePath="Content" Margin="0,4,0,12">
                        <ComboBoxItem Content="C:"/>
                        <ComboBoxItem Content="D:"/>
                        <ComboBoxItem Content="E:"/>
                    </ComboBox>

                    <TextBlock FontWeight="SemiBold" Text="Folder Picker"/>
                    <TextBox Margin="0,4,0,12" Text="{Binding SelectedFolder}"/>

                    <Button Content="Scan" Height="32" Command="{Binding ScanCommand}" Margin="0,0,0,16"/>

                    <TextBlock FontWeight="SemiBold" Text="Snapshots (placeholder)" Margin="0,0,0,6"/>
                    <ListBox ItemsSource="{Binding SnapshotPlaceholders}" Height="220"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="12,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="6" Margin="0,0,0,12">
                    <TextBlock Text="Treemap placeholder" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="6" Margin="0,0,6,0">
                        <StackPanel>
                            <TextBlock Text="Tree placeholder" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ListBox ItemsSource="{Binding TreePlaceholders}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="6" Margin="6,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Top Files placeholder" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ListBox ItemsSource="{Binding TopFilesPlaceholders}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <Border Grid.Column="2" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="6">
                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Inspector (placeholder)" Margin="0,0,0,8"/>
                    <TextBlock Text="Select an item in a future task to view details." TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Width="180" Height="14" Minimum="0" Maximum="100" Value="{Binding ScanProgress}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
